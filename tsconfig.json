{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "lib": ["es6", "dom", "es2015.iterable"],
        "baseUrl": ".",
        "paths": {
            "~/*": ["app/*"],
            "*": ["./node_modules/tns-core-modules/*", "./node_modules/*"]
        },

        "outDir": "./dist/",
        "noImplicitAny": false,
        "noImplicitThis": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "sourceMap": true
    },
    "exclude": ["node_modules", "demo", "dist"]
}
